<%= render 'layouts/errors', object: @message %>

<h1>New message:</h1>

<%= form_for @message do |f| %>
  <ul>
    <% f.fields_for :clients do |builder| %>
    <li>
      <%= builder.radio_button_tag(:to, client.number) %>
      <%= builder.label_tag(:to, client.name) %>
    </li>
    <% end %>
  </ul>
  <%= f.label :from %>
  <%= f.text_field :from %>
  <%= f.label :body %>
  <%= f.text_field :body %>
  <%= f.label :media_url %>
  <%= f.text_field :media_url %>


  <%= f.submit %>



<% end %>
